<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chatListItem_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/chat_title"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/chatListItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/chatListItem_image"
        android:layout_toEndOf="@+id/chatListItem_image"
        android:text="@string/chat_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chatListItem_lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chatListItem_image"
        android:layout_alignEnd="@+id/chatListItem_image"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/chatListItem_title"
        android:layout_toEndOf="@+id/chatListItem_image"
        android:ellipsize="none"
        android:maxLines="3" />
</RelativeLayout>
